{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "nse-bse-api",
  "version": "0.1.0",
  "description": "Unified TypeScript API for NSE and BSE India stock exchanges",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bshada/nse-bse-api.git"
  },
  "bugs": {
    "url": "https://github.com/bshada/nse-bse-api/issues"
  },
  "homepage": "https://github.com/bshada/nse-bse-api#readme",
  "author": "bshada",
  "type": "module",
  "browser": false,
  "main": "dist-cjs/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist-cjs/index.js",
      "types": "./dist/index.d.ts"
    },
    "./nse": {
      "import": "./dist/nse/index.js",
      "require": "./dist-cjs/nse/index.js",
      "types": "./dist/nse/index.d.ts"
    },
    "./bse": {
      "import": "./dist/bse/index.js",
      "require": "./dist-cjs/bse/index.js",
      "types": "./dist/bse/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json && node scripts/postbuild-cjs.js",
    "clean": "rimraf dist dist-cjs",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:network": "vitest run",
    "test:nse": "vitest run tests/nse",
    "test:bse": "vitest run tests/bse",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "dist-cjs",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "nse",
    "bse",
    "nseindia",
    "bseindia",
    "stocks",
    "api",
    "typescript",
    "india",
    "stock-exchange",
    "stock-market-api"
  ],
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.7.7",
    "axios-cookiejar-support": "^6.0.2",
    "got": "^12.6.1",
    "node-html-parser": "^6.1.10",
    "tough-cookie": "^4.1.3"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.6",
    "@types/node": "^22.7.4",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "cross-env": "^7.0.3",
    "eslint": "^9.11.0",
    "prettier": "^3.1.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}